{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="homepage-heading">Homepage & Registration Form</h1>

    {{ form_start(registrationForm,{"attr":{"class":"reg-form"}}) }}
        {{ form_row(registrationForm.email,{"attr":{"class":"form-control"}}) }}
        {{ form_row(registrationForm.plainPassword,{"attr":{"class":"form-control"}}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn btn-primary">Register</button>
        <p>Already have an account? <a class="btn-link" href="{{ path('app_login') }}"> Login in.</p>
    {{ form_end(registrationForm) }}
    <div>
    
</div>
{% endblock %}
